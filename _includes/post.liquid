<h1>{{ pageTitle }}</h1>
{{ content }}

{% assign similar = collections.sortedPosts | similarPosts: date, categories %}

<hr>

<p class="similar">More like this</p>
<div class="posts-block wide">
    {% for post in similar limit: 2 %}
        <section class="posts-latest">
            <p>
                Similar post | {{post.data.date}}
            </p>
            <h2>
                <a href="{{post.url}}">
                    {{post.data.pageTitle}}
                </a>
            </h2>
            <p class="categories">
                {% for cat in post.data.categories %}
                    <span>
                        {{cat}}
                    </span>
                {% endfor %}
            </p>
        </section>
    {% endfor %}
</div>

<p class="archive"><a href="./archive/">See all posts →</a></p>

